{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ], // Include Jest and Node.js types
        "rootDir": "./", // Ensure both src/ and test/ are covered
        "noEmit": true // Prevent emitting compiled files during test
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}